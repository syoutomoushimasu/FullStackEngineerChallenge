{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2017",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": { 
      "@/*": ["*"]
    }
  },
  "include": [
    "src/**/*", "server"
  ],
  "exclude": [
    "node_modules"
  ]
}